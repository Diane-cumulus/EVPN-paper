# The loopback network interface
auto lo
iface lo inet loopback
    address 10.1.1.2/32

# The primary network interface
auto eth0
iface eth0 inet dhcp
#  vrf mgmt

#auto mgmt
#iface mgmt
#   address 127.0.0.1/8
#   vrf-table auto


auto swp1
iface swp1
  alias connected to server01
  bridge-access 20

auto swp2
iface swp2
    alias connected to server02
    bridge-access 10

auto swp51
iface swp51

auto swp52
iface swp52

auto vxlan_10
iface vxlan_10
    vxlan-id 10100
    bridge-arp-nd-suppress on
    vxlan-local-tunnelip 10.1.1.2
    vxlan-learning off
    bridge-access 10
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes

auto vxlan_20
iface vxlan_20
    vxlan-id 10200
    bridge-arp-nd-suppress on
    vxlan-local-tunnelip 10.1.1.2
    vxlan-learning off
    bridge-access 20
    mstpctl-bpduguard yes
    mstpctl-portbpdufilter yes
    
auto vlan_10
iface vlan_10
   ip-forward off
   vlan-id 10
   vlan-raw-device bridge
   

auto vlan_20
iface vlan_20
    ip-forward off
    vlan-id 20
    vlan-raw-device bridge
    
auto bridge
iface bridge
    bridge-vids 10-20
    bridge-ports swp1 swp2 vxlan_10 vxlan_20 
    bridge-vlan-aware yes
